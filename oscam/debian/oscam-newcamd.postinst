#!/bin/sh
set -e

case "$1" in
    configure)
        if [ -x "/etc/init.d/oscam" ]
        then
            update-rc.d oscam defaults || true
            invoke-rc.d oscam start || true
        fi
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac
